<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="morning" class="exam1.MorningGreetingImpl">
	<property name="ment">
	<value>상쾌한 아침입니다.</value>
	</property>
</bean>

<bean id="afternoon" class="exam1.AfternoonGreetingImpl">
	<property name="ment">
	<value>즐거운 오후되세요.</value>
	</property>
</bean>

<bean id="evening" class="exam1.EveningGreetingImpl">
<property name="ment">
<value>편안한 저녁되세요.</value>
</property>
</bean>

<bean id="Night" class="exam1.NightGreetingImpl">
<property name="ment">
<value>안녕히 주무세요.</value>
</property>
</bean>
<bean id="time" class="java.time.LocalDateTime" factory-method="now"></bean>
</beans>